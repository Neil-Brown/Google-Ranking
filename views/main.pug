extends header
block main
	.jumbotron.jumbotron-fluid#rank
		h1.display-4 Where is your site on Google?
		p.lead Find where your site ranks for keywords
		form.container#getRank.md-form.text-center(name ="getRank" action="/contact" method="post" enctype="multipart/form-data")
			.row
				input.col(type="url" placeholder="https://myWebsite.com" name="site")
			.row
				.col-10
					input.key(type="text" placeholder="Keyword 1" name="key1")
				.col-2.my-auto
					.spinner-grow(role="status")
						span.sr-only Loading...
			.row
				.col-10
					input.key(type="text" placeholder="Keyword 2" name="key2")
				.col-2.my-auto
					.spinner-grow(role="status")
						span.sr-only Loading...
			.row
				.col-10
					input.key(type="text" placeholder="Keyword 3" name="key3")
				.col-2.my-auto
					.spinner-grow(role="status")
						span.sr-only Loading...
			.row
				button.col.btn(action="submit") Try for Free
block append js
	script(src="/js/main.js")